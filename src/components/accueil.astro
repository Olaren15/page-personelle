---
import { obtenirLangueSelonUrl, utiliserTraductions } from "../i18n/utils";
import Layout from "../layouts/Layout.astro";

const langue = obtenirLangueSelonUrl(Astro.url);
const t = utiliserTraductions(langue);
---

<Layout titre={t("accueil.titre")} description={t("accueil.description")}>
  <h1 class="text-4xl font-extrabold">{t("accueil.titre")}</h1>
  <hr />
  <h2 class="text-2xl">{t("accueil.description")}</h2>
</Layout>
