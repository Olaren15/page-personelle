---
import "@fontsource-variable/urbanist";

import { obtenirLangueSelonUrl } from "../i18n/utils";

interface Props {
  titre: string;
  description: string;
}

const { titre, description } = Astro.props;
const langue = obtenirLangueSelonUrl(Astro.url);
---

<!doctype html>
<html lang={langue}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#d2a1c1" />
    <meta name="theme-color" content="#d2a1c1" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="darkreader-lock" />
    <script>
      import { appliquerTheme, obtenirPreferenceTheme } from "../theme/utils.ts";

      appliquerTheme(obtenirPreferenceTheme());
    </script>
    <title>{titre}</title>
  </head>
  <body class="bg-light-background dark:bg-dark-background text-light-foreground dark:text-dark-foreground transition">
    <slot />
  </body>
</html>
